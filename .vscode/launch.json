  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickMyProcess}",
      "name": "Attach to pid"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "expressions": "simple",
      "preLaunchTask": "debug-build",
      "program": "${workspaceFolder}/target/debug/pokertimer",
      // "cwd": "${workspaceFolder}/target/site",
      "args": [],
      "env": { "LEPTOS_SITE_ADDR": "0.0.0.0:3000", "RUST_LOG": "info" }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'pokertimer'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=pokertimer"],
        "filter": {
          "name": "pokertimer",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'pokertimer'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=pokertimer",
          "--package=pokertimer"
        ],
        "filter": {
          "name": "pokertimer",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
